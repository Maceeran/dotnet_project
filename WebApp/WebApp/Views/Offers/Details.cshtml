@model WebApp.Models.Offer

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Offer</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RetrievalAddress)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RetrievalAddress)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VoidDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VoidDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Photos)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Photos is not null)
            {
                @if (Model.Photos is not null && Model.Photos.Count() == 0)
                {
                    <span>-</span>
                }
                else
                {
                    @foreach (var photo in Model.Photos)
                    {
                        <img src="/@photo.FileAddress"/ class="img-md">
                    }
                }
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
